<?xml version="1.0" encoding="UTF-8" ?>

<node name="/Player">

  <interface name="org.freedesktop.MediaPlayer">

        <method name="GetMetadata">
              <arg type="a{sv}" direction="out" />
        </method>

        <method name="PlayTracks">
              <arg type="as"/>
              <arg type="b"/>
        </method>

        <method name="GetStatus">
              <arg type="i" direction="out"/>
        </method>

        <method name="Next"/>
        <method name="Prev"/>
        <method name="Pause"/>
        <method name="Stop"/>
        <method name="Play"/>

        <!---->

        <signal name="NewTrack"/>
        <signal name="TrackPlayed"/>
        <signal name="InfoAreaClick"/>
        <signal name="PlayStatusChanged">
            <arg type="i"/>
        </signal>
        <signal name="MetadataPrepare"/>
        <signal name="MetadataUpdated"/>
        <signal name="NewCoverart"/>

  </interface>
</node>
