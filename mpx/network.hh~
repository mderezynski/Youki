#ifndef BMP_NETWORK_HH
#define BMP_NETWORK_HH

#ifdef HAVE_CONFIG_H
#include <config.h>
#endif // HAVE_CONFIG_H

#include <dbus/dbus.h>
#include <glibmm.h>
#include "main.hh"

#ifdef HAVE_NM
#include <NetworkManager.h>
#endif // HAVE_NM

namespace Bmp
{
  class NM
  {
    public:
        NM ();
        ~NM ();

        bool
        Check_Status (bool ForcedCheck = false);

        void
        Disable ();

        static NM* Obj (ObjCreateFlag F = OBJ_FLAG_NONE)
        {
          static NM* p = 0;

          if( F == OBJ_FLAG_DELETE ) 
          {
            delete p;
            p = 0;
          }

          if( F == OBJ_FLAG_CREATE ) 
          {
            p = new NM();
          }

          return p;
        }


    private:

        bool m_Attempted;
        bool m_CachedState;

        bool
        Check_Host (std::string const& hostname,
                    guint16     port,
                    bool        write = false,
                    guint       n_tries = 4,
                    gdouble     initial_timeout = 2.0,
                    gdouble     timeout_step = 0.5);

        bool
        Check_Manually ();

        bool
        Check_NM ();

        DBusConnection* m_DbusConnection;
  };
}

#endif // BMP_NETWORK_HH
